{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "jsx": "react-jsx",

    "outDir": "dist",
    "declaration": true,

    "sourceMap": true,
    "importHelpers": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["node_modules", "dist", "build", "tmp"],
  "include": ["src", "*.d.ts"]
}
